@using System.Web.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Modules.Pages;
@using Telerik.Sitefinity.UI.MVC;
@using Telerik.Sitefinity.Services;

<!DOCTYPE html>
<html @Html.RenderLangAttribute()>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="icon" href="src/img/site/favicon.png" type="image/png" />
    <title></title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">

    @Html.Section("head")
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900' rel='stylesheet' type='text/css'>
    @Html.StyleSheet(Url.Content("~/ResourcePackages/Totvs/assets/dist/css/main.min.css"), "head")
</head>

<body>
    @Html.Section("top")

    <div>
        <nav class="navbar navbar-default @((SystemManager.IsDesignMode)? string.Empty :
            "navbar-fixed-top")" role="navigation" handle-scroll="">
            <div class="container-fluid">
                <header>
                    @Html.SfPlaceHolder("Header")
                </header>
            </div>
        </nav>
    </div>
    <div>
        @Html.SfPlaceHolder("MainContainer")
    </div>
    <div>
        @Html.SfPlaceHolder("Footer")
    </div>
    <div>
        @Html.SfPlaceHolder("ModalContainer")
    </div>

    @if (!SystemManager.IsDesignMode)
    {
        <script src="http://totvs-demo.dev.globant.com/dist/js/compiled.min.js" type="text/javascript" />
    }
    @Html.Section("bottom")
</body>
</html>
